<h2>Forgot your password? <small> - Already have an account? <%= link_to 'Sign in', new_session_path(resource_name) %> or if not <%= link_to 'Register', new_registration_path(resource_name) %></small></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal well clearfix' }) do |f| %>
	<%= content_tag :fieldset, class: 'span4 offset3' do %>
  		<div class='control-group'>
  			<%= f.label :email, class: 'control-label' %>
  			<div class='controls'>
	  			<%= f.email_field :email %>
	  		</div>
	  	</div>
	  	<div class='pull-right'>
	  		<%= f.submit "Send me reset password instructions", class: 'btn btn-mini' %>
	  	</div>
  	<% end %>
<% end %>